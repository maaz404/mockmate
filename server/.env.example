
# Server .env example
# Copy this file to server/.env and replace placeholder values with real secrets.
# Never check real secrets into source control.

PORT=5000
NODE_ENV=development

# MongoDB connection string - use Atlas SRV or a local MongoDB for development
# Example (Atlas): mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/mockmate?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.example.mongodb.net/mockmate?retryWrites=true&w=majority

# Clerk (server-side keys)
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY
CLERK_JWT_KEY=clerk_jwt_key_here

# JWT fallback (if used by server)
JWT_SECRET=your_jwt_secret_change_in_production
JWT_EXPIRE=7d

# OpenAI (if used)
OPENAI_API_KEY=sk-your-openai-key-here

# Judge0 (external code execution API)
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
RAPIDAPI_KEY=your_rapidapi_key_here

# CORS / Client URL(s)
CLIENT_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Development toggles
MOCK_AUTH_FALLBACK=true
INMEMORY_FALLBACK=false

# SMTP (email) - set only if you plan to send mail in dev
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password_or_app_password

# Cloudinary (uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate limiting defaults
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
