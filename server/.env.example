# Server .env example
# Copy this file to server/.env and replace placeholder values with real secrets.
# Never check real secrets into source control.

PORT=5000
NODE_ENV=development

# MongoDB connection string - use Atlas SRV or a local MongoDB for development
# Example (Atlas): mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/mockmate?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.example.mongodb.net/mockmate?retryWrites=true&w=majority

# Google OAuth 2.0 (Authentication)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
SESSION_SECRET=your-session-secret-change-in-production

# JWT Configuration (for API tokens and password reset)
JWT_SECRET=your-jwt-secret-key-at-least-32-chars-long-change-in-production
JWT_EXPIRE=7d
COOKIE_EXPIRE=7

# Server/Client URLs for OAuth callback and CORS
SERVER_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# OpenAI (if used)
OPENAI_API_KEY=sk-your-openai-key-here

# Judge0 (external code execution API)
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
RAPIDAPI_KEY=your_rapidapi_key_here

# Premium test emails (comma-separated for dev/test mode)
PREMIUM_TEST_EMAILS=maazakbar404@gmail.com

# Development toggles
MOCK_AUTH_FALLBACK=false
INMEMORY_FALLBACK=false

# SMTP (email) - set only if you plan to send mail in dev
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password_or_app_password

# Cloudinary (uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate limiting defaults
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
